{
  "manifest_version": 3,
  "name": "GQ Party Streamliner",
  "version": "1.0.0",
  "description": "Auto-fill Great Question participant forms for testing",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["*://greatquestion.co/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://greatquestion.co/*"],
      "js": ["content/wordlist.js", "content/content.js"],
      "run_at": "document_idle"
    }
  ]
}
